<body>

    <div class="container mb-3">
        <h1>New Task</h1>
        <br />
        @using (Html.BeginForm("Add", "ToDo", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Task Owner")
                @Html.TextBoxFor(x => x.ToDoOwner)
                @Html.ValidationMessageFor(x => x.ToDoOwner)
                <br /><br />
                @Html.Label("Task Title")
                @Html.TextBoxFor(x => x.ToDoTitle)
                @Html.ValidationMessageFor(x => x.ToDoTitle)
                <br /><br />
                @Html.Label("Task Description")
                @Html.TextBoxFor(x => x.ToDoDescription)
                @Html.ValidationMessageFor(x => x.ToDoDescription)
                <br /><br />
                @Html.Label("Task Status")
                @Html.TextBoxFor(x => x.ToDoStatusEnum)
                @Html.ValidationMessageFor(x => x.ToDoStatusEnum)
                <br /><br />

                <button class="btn btn-outline-success">Add</button>
            </div>
        }

    </div>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

